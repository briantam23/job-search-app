  },
  "version": "1.0.0",
  "description": "Job Search App",
  "repository": {
    "type": "git",
    "url": "https://github.com/briantam23/job-search-app.git"
  },
  "main": "server/index.js",
  "scripts": {
    "start": "node ./server/index.js",
    "heroku-postbuild": "webpack -p",
    "webpack": "./node_modules/webpack/bin/webpack.js",
    "build": "npm run webpack -- --watch --mode=development",
    "start:dev": "npm run build & nodemon server/index.js --ignore public --ignore src",
    "test": "mocha ./test/*.test.js --require babel-polyfill --require ignore-styles --compilers js:babel-register",
    "test:dev": "npm test -- --watch"
  },
  "keywords": [
    "reactjs",
    "nodejs"
  ],
  "license": "ISC",
  "babel": {
    "presets": [
      "env",
      "react",
      "stage-3"
    ],
    "plugins": [
      "transform-class-properties"
    ]
  },
  "dependencies": {
    "express": "^4.16.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-html-parser": "^2.0.2",
    "react-router-dom": "^5.0.1",
    "react-truncate-markup": "^4.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "chai": "^4.2.0",
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "ignore-styles": "^5.0.1",
    "mocha": "^5.2.0",
    "sinon": "^7.5.0",
    "spy": "^1.0.0",
    "style-loader": "^1.0.0",
    "supertest": "^4.0.2",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.3.12"
  }
}
